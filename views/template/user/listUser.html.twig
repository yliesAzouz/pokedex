{% extends "./../main.html.twig" %}

{% block main %}
	<div class="container mt-5">
		<div class="row">
			{% for user in users %}

				<div style="background: radial-gradient(#60efbc, #58d5c9); height: 55px" class="card col-10 mx-auto my-1">
                
					<div class="row d-flex justify-content-between align-items-center">
						<p class="col-1 card-text text-center  mb-0">{{loop.index}}</p>
						<h5 class="col-4 col-sm-4 col-md-3 col-lg-3 card-title text-center">{{user.nickname}}</h5>
						<p class="col-2 card-text text-center mb-0">{{user.age}}
							ans</p>
						<p class="col-5 col-sm-5 col-md-3 col-lg-3 card-text text-center">{{user.pokemons|length}}Pok√©mons</p>
                        <div class="col-3 d-none d-lg-block">
						{% for badge in user.badge %}
							<img src="/pictures/{{badge}}.jpg" width="50px" alt="">
						{% endfor %}
                        </div>
					</div>
                    
				</div>

			{% endfor %}
		</div>
	</div>
{% endblock %}
